{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@env": ["./src/env.js"]
		},
		"esModuleInterop": true,
		"checkJs": true
	},
	"include": ["global.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["babel.config.js", "android", "ios", "metro.config.js", "tailwind.config.js"]
}
